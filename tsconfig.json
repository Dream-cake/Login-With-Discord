{
    "compileOnSave": true,
    "include": [
        "./src/*"
    ],
    "exclude": [
        "./docs/*"
    ],
    "compilerOptions": {
        "outFile": "./dist/lwd.js",
        "declaration": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "target": "es2017",
        "watch": true,
        "noImplicitAny": true,
        "pretty": true,
        "noImplicitReturns": true,
        "sourceMap": true
    }
}